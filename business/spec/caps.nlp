@PATH _ROOT _paragraph _sentence

@POST
	L("con") = getconcept(G("caps"),N("$text"));
	S("caps") = L("con");
	AddUniqueStr(L("con"),"type","full");
	
	L("con") = getconcept(G("names"),N("$text"));
	S("names") = L("con");

	single();
@RULES
_name <-
	_xWILD [min=2 match=(_xCAP)]
	@@

@PRE
<1,1> uppercase();
@POST
	L("con") = getconcept(G("caps"),N("$text"));
	S("caps") = L("con");
	AddUniqueStr(L("con"),"type","abbrev");
	single();
@RULES
_name <-
	_xALPHA
	@@
